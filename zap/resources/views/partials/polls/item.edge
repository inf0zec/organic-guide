<div class="flex items-center py-4 border-b border-gray-300">
  <div title="{{ poll.$extras.votesCount }} vote(s)">
    <div
      class="pill-rounded pill-rounded-base"
      style="background-color: {{ poll.pollColor }}"
    >
      {{ poll.$extras.votesCount > 99 ? '99+' : poll.$extras.votesCount }}
    </div>
  </div>
  <div class="ml-6">
    <h3 class="mb-0.5">
      <a
        href="{{ route('PollsController.show', [poll.slug]) }}"
        class="text-teal-800 text-xl"
        up-preload
        up-target="[layout-main]"
      >
        {{ poll.title }}
      </a>
    </h3>

  </div>
</div>